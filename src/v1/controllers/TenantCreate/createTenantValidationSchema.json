{
  "type": "object",
  "title": "tenant",
  "required": ["tenant_name", "tenant_type", "tenant_board", "created_by"],
  "additionalProperties": false,
  "properties": {
    "tenant_name": {
      "type": "string",
      "description": "must be a string and is required"
    },
    "tenant_type": {
      "type": "string",
      "description": "must be a string and is required"
    },
    "created_by": {
      "type": "number",
      "description": "must be a number and is required"
    },
    "updated_by": {
      "type": "number",
      "description": "must be a number and is optional"
    },
    "tenant_board": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "The name of the tenant board"
          },
          "class_id": {
            "type": "array",
            "items": {
              "type": "number"
            },
            "minItems": 1,
            "uniqueItems": true,
            "description": "Array of class IDs"
          },
          "created_by": {
            "type": "number",
            "description": "The ID of the user creating the tenant board"
          }
        },
        "required": ["name"],
        "additionalProperties": false
      }
    }
  }
}
